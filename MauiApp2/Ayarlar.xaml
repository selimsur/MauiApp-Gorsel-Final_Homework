<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Ayarlar"
             Title="Ayarlar">
    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="DefaultLabelStyle">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>
        <Style x:Key="DarkLabelStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="Black"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Orientation="Horizontal" Spacing="10" Padding="30,0" VerticalOptions="Start">
            <Switch x:Name="switchControl" Toggled="Switch_Toggled"></Switch>
            <Label x:Name="switchControlLabel" FontSize="16" VerticalOptions="Center"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
